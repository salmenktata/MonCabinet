{
  "name": "moncabinet",
  "version": "0.1.0",
  "private": true,
  "description": "MonCabinet - Plateforme SaaS de gestion de cabinet juridique pour avocats tunisiens",
  "author": "MonCabinet Team",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "next dev -p 7002",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "check:translations": "node scripts/check-translations.js",
    "find:hardcoded-text": "node scripts/find-hardcoded-text.js",
    "check:dark": "./scripts/check-dark-mode.sh",
    "fix:dark": "./scripts/fix-dark-mode.sh",
    "translations:validate": "npm run check:translations && npm run find:hardcoded-text",
    "precommit": "npm run check:translations",
    "stop": "lsof -ti:7002 | xargs kill -9 2>/dev/null || true",
    "clean": "rm -rf .next",
    "restart": "npm run stop && npm run clean && npm run dev"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@react-pdf/renderer": "^4.2.0",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.94.1",
    "axios": "^1.13.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "googleapis": "^171.2.0",
    "lucide-react": "^0.468.0",
    "minio": "^8.0.2",
    "next": "15.5.12",
    "next-intl": "^4.8.2",
    "next-themes": "^0.4.6",
    "pg": "^8.18.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.71.1",
    "resend": "^4.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.6.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.76",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/google-apps-script": "^2.0.8",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "autoprefixer": "^10.4.20",
    "dotenv": "^17.2.3",
    "eslint": "^9.17.0",
    "eslint-config-next": "15.5.12",
    "eslint-config-prettier": "^10.0.1",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
