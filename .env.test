# ========================================
# Configuration Base de Données de Test
# ========================================
# IMPORTANT : Cette configuration est UNIQUEMENT pour les tests
# Ne JAMAIS pointer vers la base de production

# Base de données PostgreSQL de test
DATABASE_URL=postgresql://moncabinet:dev_password@localhost:5433/qadhya_test

# Node environment
NODE_ENV=test

# Redis (DB séparée pour tests)
REDIS_URL=redis://localhost:6379/1

# MinIO (buckets séparés)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET=test-documents
MINIO_WEB_FILES_BUCKET=test-web-files

# Désactiver certains services en mode test
ENABLE_WEB_CRAWLER_CRON=false
ENABLE_KB_INDEXING_CRON=false
ENABLE_CLASSIFICATION_CACHE=false

# Ollama (peut utiliser le même que dev)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_ENABLED=true
OLLAMA_CHAT_MODEL=qwen2.5:3b
OLLAMA_EMBEDDING_MODEL=qwen3-embedding:0.6b

# API Keys (optionnelles pour tests)
# GROQ_API_KEY=
# DEEPSEEK_API_KEY=
# OPENAI_API_KEY=

# Désactiver embeddings turbo par défaut en test
EMBEDDING_TURBO_MODE=false
